{
  "env": {
    "browser": true,
    "jest": true
  },
  "extends": "airbnb",
  "plugins": [
    "compat"
  ],
  "rules": {
    "linebreak-style": 0,
    "semi": [2, "never"],
    "no-unexpected-multiline": 2,
    "arrow-body-style": ["error", "always"],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "camelcase": 0
  },
  "settings": {
    "polyfills": ["fetch"]
  }
}
